import Layout from "../layouts/Layout.astro";
import ProjectList from "src/components/react/ProjectList";
import WorksComponent from "src/components/astro/works/Works.astro";
import type { IProject } from "src/models/project";
import SideContacts from "../components/astro/VerticalContacts.astro";
import Footer from "../components/astro/Footer.astro";
import { professionalWorksData } from "../data/works.json";

const personal: IProject[] = [
  {
    title: "Project 1",
    date: new Date(),
    description:
      "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever. Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever. Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever.",
    techStack: ["React", "TailwindCSS"],
    githubUrl: "https://github.com",
    projectUrl: "https://project1.com",
    imageUrl: "https://developers.elementor.com/docs/assets/img/elementor-placeholder-image.png",
  },
];

const professional: IProject[] = [
  {
    title: "Project 2",
    date: new Date(),
    description:
      "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever. Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever. Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever.",
    techStack: ["React", "TailwindCSS"],
    githubUrl: "https://github.com",
    projectUrl: "https://project2.com",
    imageUrl: "https://developers.elementor.com/docs/assets/img/elementor-placeholder-image.png",
  },
];

professional.push(...professional);

personal.push(...personal);
personal.push(...personal);
personal.push(...personal);
---

<Layout title="Works Page">
  <main class="flex flex-col items-center w-full h-full min-w-[100vw] min-h-[100vh] bg-background">
    <Navbar />
    <SideContacts />
    <div class="flex flex-col w-3/4">
      <ProjectList client:load>
        <div
          class="flex flex-col gap-8"
          slot="personalProjects">
          {
            personal.map((p, i) => {
              return (
                <WorksComponent
                  data={p}
                  inverted={i % 2 === 0}
                />
              );
            })
          }
        </div>
        <div
          class="flex flex-col gap-8"
          slot="professionalProjects">
          {
            professionalWorksData.map((p, i) => {
              return (
                <WorksComponent
                  data={p}
                  inverted={i % 2 === 0}
                />
              );
            })
          }
        </div>
      </ProjectList>
      <Footer />
    </div>
  </main>
</Layout>

<style is:global>
  .menu-animation::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -10%;
    width: 100%;
    height: 2px;
    background-color: #00adb4;
    transform: scaleX(1);
    transform-origin: left;
    transition: transform 0.4s ease;
    z-index: 0;
  }

  .menu-animation-disabled::after {
    transform: scaleX(0) !important;
  }
</style>
