---
import Navbar from "src/components/astro/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import ProjectList from "src/components/react/ProjectList";
import WorksComponent from "src/components/astro/works/Works.astro";
import type { IProject } from "src/models/project";

const personal: IProject[] = [
  {
    title: "Project 1",
    date: new Date(),
    description: "Project 1 description",
    techStack: ["React", "TailwindCSS"],
    githubUrl: "https://github.com",
    projectUrl: "https://project1.com",
    imageUrl: "https://developers.elementor.com/docs/assets/img/elementor-placeholder-image.png",
  },
];
---

<Layout title="Works Page">
  <main class="flex flex-col items-center w-full h-full min-w-[100vw] min-h-[100vh] bg-background">
    <Navbar />
    <div class="flex flex-col w-3/4">
      <ProjectList>
        <div slot="personalProjects">
          {
            personal.map((p, i) => {
              return (
                <WorksComponent
                  data={p}
                  inverted={i % 2 === 0}
                />
              );
            })
          }
        </div>
        <div slot="professionalProjects">
          {
            personal.map((p, i) => {
              return (
                <WorksComponent
                  data={p}
                  inverted={i % 2 === 0}
                />
              );
            })
          }
        </div>
      </ProjectList>
      <section class="flex justify-between items-center min-h-[100vh] h-[100vh] gap-5"></section>
    </div>
  </main>
</Layout>
