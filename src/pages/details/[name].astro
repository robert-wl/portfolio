---
import type { GetStaticPaths } from "astro";
import Navbar from "../../components/astro/Navbar.astro";
import Layout from "../../layouts/Layout.astro";
import SideContacts from "../../components/astro/VerticalContacts.astro";
import Footer from "../../components/astro/Footer.astro";
import GithubLineIcon from "../../components/astro/icons/GithubLineIcon.astro";
import RedirectLineIcon from "../../components/astro/icons/RedirectLineIcon.astro";

export const getStaticPaths = (() => {
  return [
    {
      params: {
        name: "aa",
      },
    },
  ];
}) satisfies GetStaticPaths;

const { name } = Astro.params;
---

<Layout title="Works Page">
  <main class="flex flex-col items-center w-full h-full min-w-[100vw] min-h-[100vh] bg-background">
    <Navbar />
    <SideContacts />
    <div class="flex flex-col w-3/4">
      <div class="flex flex-col gap-2">
        <div class="pt-64 flex text-3xl gap-2 font-semibold text-white">
          <span class="pe-4">{name}</span>
          <div class="hover:stroke-primary stroke-white cursor-pointer transition-colors">
            <GithubLineIcon />
          </div>
          <div class="hover:stroke-primary stroke-white cursor-pointer transition-colors">
            <RedirectLineIcon />
          </div>
        </div>
        <p class="text-white text-opacity-50 text-xl">{new Date().toLocaleDateString("en-US", { year: "numeric", month: "long", day: "numeric" })}</p>
        <p class="flex text-white text-opacity-50 text-xl gap-4">
          Tags
          {
            ["a", "b"].map((tech) => {
              return <span class="bg-[#00ADB4] font-roboto-mono text-lg text-primary bg-opacity-20 px-4 py-0.5 rounded-full">{tech}</span>;
            })
          }
        </p>
      </div>
      <div class="py-16">
        <h3 class="text-white text-2xl font-bold">aaa</h3>
        <p class="text-white text-lg">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam nec</p>
        <p class="text-white text-lg">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam nec</p>
      </div>
    </div>
    <Footer />
  </main>
</Layout>
