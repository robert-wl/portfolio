---
import type { GetStaticPaths } from "astro";
import Navbar from "../../components/astro/Navbar.astro";
import Layout from "../../layouts/Layout.astro";
import SideContacts from "../../components/astro/VerticalContacts.astro";
import Footer from "../../components/astro/Footer.astro";
import GithubLineIcon from "../../components/astro/icons/GithubLineIcon.astro";
import RedirectLineIcon from "../../components/astro/icons/RedirectLineIcon.astro";

export const getStaticPaths = (() => {
  return [
    {
      params: {
        name: "aa",
      },
    },
  ];
}) satisfies GetStaticPaths;

const { name } = Astro.params;
---

<Layout title="Works Page">
  <main class="flex h-full min-h-[100vh] w-full min-w-[100vw] flex-col items-center bg-background">
    <Navbar />
    <SideContacts />
    <div class="flex w-3/4 flex-col">
      <div class="flex flex-col gap-2">
        <div class="flex gap-2 pt-64 text-3xl font-semibold text-white">
          <span class="pe-4">{name}</span>
          <div class="cursor-pointer stroke-white transition-colors hover:stroke-primary">
            <GithubLineIcon />
          </div>
          <div class="cursor-pointer stroke-white transition-colors hover:stroke-primary">
            <RedirectLineIcon />
          </div>
        </div>
        <p class="text-xl text-white text-opacity-50">{new Date().toLocaleDateString("en-US", { year: "numeric", month: "long", day: "numeric" })}</p>
        <p class="flex gap-4 text-xl text-white text-opacity-50">
          Tags
          {
            ["a", "b"].map((tech) => {
              return <span class="rounded-full bg-[#00ADB4] bg-opacity-20 px-4 py-0.5 font-roboto-mono text-lg text-primary">{tech}</span>;
            })
          }
        </p>
      </div>
      <div class="py-16">
        <h3 class="text-2xl font-bold text-white">aaa</h3>
        <p class="text-lg text-white">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam nec</p>
        <p class="text-lg text-white">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam nec</p>
      </div>
    </div>
    <Footer />
  </main>
</Layout>
