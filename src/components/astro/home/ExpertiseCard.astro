---
import { Image } from "astro:assets";
import expertImage from "src/images/dev-icon.png";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div
  class="flex min-h-64 w-1/3 cursor-pointer flex-col gap-4 rounded-[2rem] border border-primary p-10 transition-all duration-300 hover:scale-105 hover:bg-[#393D46] hover:bg-opacity-50 hover:shadow-primary-shiny">
  <div class="flex items-center gap-4">
    <Image
      class="aspect-square w-16 rounded-full object-cover"
      src={expertImage}
      alt="Temporary Image"
    />
    <span class="text-3xl font-semibold text-white">
      {title}
    </span>
  </div>
  <div class="flex w-full text-base">
    <slot />
  </div>
</div>
