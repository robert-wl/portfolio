---
import { Image } from "astro:assets";
import expertImage from "src/images/dev-icon.png";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div
  class="flex flex-col w-1/3 min-h-64 transition-all cursor-pointer duration-300 bg-background hover:scale-105 hover:shadow-primary-shiny hover:bg-[#393D46] hover:bg-opacity-50 border-primary border p-10 rounded-[2rem] gap-4">
  <div class="flex items-center gap-4">
    <Image
      class="rounded-full aspect-square object-cover w-16"
      src={expertImage}
      alt="Temporary Image"
    />
    <span class="text-white text-3xl font-semibold">
      {title}
    </span>
  </div>
  <div class="flex w-full text-lg">
    <slot />
  </div>
</div>
