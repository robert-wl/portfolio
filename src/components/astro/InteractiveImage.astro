---
import { Image } from "astro:assets";
interface Props {
  src: Promise<{
    default: ImageMetadata;
  }>;
  rawSrc: string;
  class?: string;
  width: number;
  height: number;
  alt?: string;
}

const { src, rawSrc, class: className, width, height, alt } = Astro.props;
---

<Image
  class={className}
  width={width}
  height={height}
  src={src}
  alt={alt}
  onclick={`document.getElementById('fullscreen-dialog-${rawSrc}').showModal()`}
/>

<dialog
  id=`fullscreen-dialog-${rawSrc}`
  onclick="this.close()"
  class="h-fit w-3/4 overflow-hidden">
  <Image
    class="h-full w-full rounded-xl border-0 object-cover outline-0"
    src={src ?? ""}
    alt={alt}
  />
</dialog>
