---
import EmailFilledIcon from "./icons/EmailFilledIcon.astro";
import GithubIcon from "./icons/GithubIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
---

<div class="fixed right-5 bottom-1/2 flex flex-col gap-4">
  <div class="drop-shadow-white transition-transform duration-300 ease-in-out transform hover:-translate-y-2 cursor-pointer">
    <LinkedInIcon />
  </div>
  <div class="drop-shadow-white transition-transform duration-300 ease-in-out transform hover:-translate-y-2 cursor-pointer">
    <EmailFilledIcon />
  </div>
  <div class="drop-shadow-white transition-transform duration-300 ease-in-out transform hover:-translate-y-2 cursor-pointer">
    <GithubIcon />
  </div>
</div>
