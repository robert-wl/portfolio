---
import type { IProject } from "src/models/project";
import { cn } from "src/utils/class-name";
import GithubLineIcon from "../icons/GithubLineIcon.astro";
import RedirectLineIcon from "../icons/RedirectLineIcon.astro";
import stringPreprocessor from "../../../utils/string-preprocessor";
import InteractiveImage from "../InteractiveImage.astro";

interface Props {
  data: IProject;
  inverted: boolean;
}

const {
  data: { title, date, description, techStack, imageUrl, githubUrl, projectUrl, isLive },
  inverted,
} = Astro.props;

const processeedDescription = stringPreprocessor(description);
---

<section
  class={cn(
    inverted ? "flex-row" : "flex-row-reverse",
    "flex w-full gap-16 p-12 bg-background hover:bg-primary hover:bg-opacity-50 duration-200 rounded-2xl cursor-pointer",
  )}>
  <div class="flex flex-col w-[45%] gap-2">
    <div class="w-full">
      {
        imageUrl.length > 0 && (
          <InteractiveImage
            class="rounded-xl w-full h-92 object-cover hover:scale-[102%] transition-transform cursor-pointer"
            width={550}
            height={850}
            src={imageUrl[0]!}
            alt="Temporary Image"
          />
        )
      }
    </div>
    {
      imageUrl.length > 1 && (
        <div class={cn("flex w-full gap-4", imageUrl.length > 3 ? "justify-between" : "justify-start")}>
          {imageUrl.slice(1).map((url) => {
            return (
              <InteractiveImage
                class="rounded-xl w-[31%] h-92 object-cover hover:scale-[102%] transition-transform cursor-pointer"
                width={550}
                height={850}
                src={url}
                alt="Temporary Image"
              />
            );
          })}
        </div>
      )
    }
  </div>
  <div class="flex flex-col items-start w-[55%] justify-center">
    {
      isLive && (
        <div class="flex items-center relative">
          <span class="absolute -left-0.5 animate-ping inline-flex h-4 w-4 rounded-full bg-red-500 opacity-75" />
          <span class="relative inline-flex rounded-full h-3 w-3 bg-red-500" />
          <p class="ps-3 text-base text-white">LIVE</p>
        </div>
      )
    }
    <h4 class="flex text-3xl gap-2 items-center font-semibold text-white">
      <span class="pe-4">{title}</span>
      {
        githubUrl?.map((url) => {
          return (
            <a
              target="_blank"
              href={url}
              class="hover:stroke-primary stroke-white cursor-pointer transition-colors">
              <GithubLineIcon />
            </a>
          );
        })
      }
      {
        isLive && (
          <a
            target="_blank"
            href={projectUrl}
            class="hover:stroke-primary stroke-white cursor-pointer transition-colors">
            <RedirectLineIcon />
          </a>
        )
      }
    </h4>
    <p class="text-gray-500">{date}</p>
    <p
      class="text-white text-base py-4"
      set:html={processeedDescription}
    />
    <div class="flex flex-wrap gap-4 pt-4">
      {
        techStack.map((tech) => {
          return (
            <span class="bg-[#00ADB4] hover:scale-110 transition-transform text-nowrap font-roboto-mono text-sm text-primary bg-opacity-20 px-4 py-0.5 rounded-full">
              {tech}
            </span>
          );
        })
      }
    </div>
  </div>
</section>
